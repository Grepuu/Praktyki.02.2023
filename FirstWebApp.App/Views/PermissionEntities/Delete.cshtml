@model FirstWebApp.App.Models.PermissionEntity

@{
    ViewData["Title"] = "Usuń";
}

<br/>
<br />
<h1>Usunąć Wpis o ID @Model.IdPermission?</h1>
<h3>Pozwolenia</h3>
<br />

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.PermissionDateAdded)*@
            Data Dodania:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermissionDateAdded)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.PermissionName)*@
            Nazwa Pozwolenia:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermissionName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.PermissionDescription)*@
            Opis Pozwolenia:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermissionDescription)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.SinceWhen)*@
            Od kiedy:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SinceWhen)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.UntilWhen)*@
            Do kiedy:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UntilWhen)
        </dd>
    </dl>
    
</div>

<div class="form-group">
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IdPermission" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <br/>
    </form>

    <br />

    <form asp-action="Index">
        <input type="submit" value="Powrót do Listy" class="btn btn-primary" />
    </form>
</div>
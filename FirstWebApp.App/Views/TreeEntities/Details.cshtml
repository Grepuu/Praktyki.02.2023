@model FirstWebApp.App.Models.TreeEntity

@{
    ViewData["Title"] = "Szczegóły";
}
<br/><br/>
<h1>Szczegóły Wpisu ID @Model.IdTree</h1>
<h4>Drzewa</h4>
<br/>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data Dodania:
            @*@Html.DisplayNameFor(model => model.TreeDateAdded)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TreeDateAdded)
        </dd>
        <dt class = "col-sm-2">
            Nazwa Drzewa:
            @*@Html.DisplayNameFor(model => model.TreeName)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TreeName)
        </dd>
        <dt class = "col-sm-2">
            Opis Drzewa:
            @*@Html.DisplayNameFor(model => model.TreeDescription)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TreeDescription)
        </dd>
        <dt class = "col-sm-2">
            Opis Liścia:
            @*@Html.DisplayNameFor(model => model.LeafDescription)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeafDescription)
        </dd>
        <dt class = "col-sm-2">
            Maksymalna Wysokość:
            @*@Html.DisplayNameFor(model => model.MaxHeight)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxHeight)
        </dd>
    </dl>
</div>
<div>

    <form>
        <input asp-action="Edit" asp-route-id="@Model.IdTree" type="submit" value="Edytuj" class="btn btn-primary" />
    </form>

    <br />

    <form>
        <input asp-action="Index" type="submit" value="Powrót do Listy" class="btn btn-primary" />
    </form>

</div>
